<form action="/Buy/SumbitOrder" method="post">
    <div class="formcontainer">
        <div class="container containers">

            <div class="form-group">
                <label class="control-label col-md-2">Product ID</label>
                <div class="col-md-1">
                    <input type='text' required readonly value="@productID" name="P_ID" />
                </div>
            </div>


            <hr />



            <div class="form-group">
                <label class="control-label col-md-2">Card Number</label>
                <div class="col-md-10">
                    <input type="number" name="CardNumber" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Card Name</label>
                <div class="col-md-10">
                    <input type="text" name="CardName" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Card Date</label>
                <div class="col-md-10">
                    <input type="date" name="CardDate" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Card Code</label>
                <div class="col-md-10">
                    <input type="password" name="CardCode" class="form-control" required />
                </div>
            </div>


        </div>
        <div class="">
            <div class="col-md-11">
                <input type="submit" value="Make ur order" class="btn btn-default FButton" />
            </div>
        </div>
    </div>
</form>


